<% if task.any? %>
<aside class="card col-md-4">
  <div class="taskname">
    <%= task.content %>
  </div>
  <%= form_with(model: @task_done, local: true) do |f| %>
  <div><%= hidden_field_tag :task_id, task.id %></div>
  <%= link_to "削除", task, method: :delete,
                             data: {confirm: "削除します。よろしいですか?"},
                             class: "btn btn-danger" %>
  <% end %>
</aside>
<% end %>