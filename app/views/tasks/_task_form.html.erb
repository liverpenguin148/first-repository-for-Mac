<!-- Button trigger modal -->
<div class="addtask">
  <button type="button" class="btn btn-secondary" data-toggle="modal" data-target="#exampleModal">
    タスクを追加する
  </button>
</div>

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">タスクの追加</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= form_with(model: @task, remote: true) do |f| %>
        <div id="error_explanation">
        </div>
        <div class="input-group mb-3">
          <div class="input-group-prepend">
            <span class="input-group-text" id="taskname">タスク名</span>
          </div>
          <%= f.text_field :content, class: 'form-control', placeholder: 'やるべきことは？' %>
        </div>
        <div class="input-group mb-3">
          <div class="input-group-prepend">
            <span class="input-group-text" id="startdate">開始予定日</span>
          </div>
          <%= f.date_field :start_expected_date, class: 'form-control' %>
        </div>
        <div class="input-group mb-3">
          <div class="input-group-prepend">
            <span class="input-group-text" id="finishdate">終了予定日</span>
          </div>
          <%= f.date_field :finish_expected_date, class: 'form-control' %>
        </div>
      </div>
      <div class="modal-footer">
        <%= f.submit '登録', class: 'btn btn-primary ml-3' %>
        <%= f.submit '閉じる', class: 'btn btn-secondary ml-3', data: {dismiss: "modal"} %>
        <% end %>
      </div>
    </div>
  </div>
</div>