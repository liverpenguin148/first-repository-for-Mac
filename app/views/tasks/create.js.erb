//フォームに入力された値を消去
$("input").val("");
// 追加されたタスクを表示
$(".tasklist").html("<%= escape_javascript( render('tasks/task')) %>");

// 処理の分岐
<% if @task.errors.any? %>
  $("#error_explanation").html("<%= escape_javascript(render 'shared/error_messages', { resource: @task }) %>");
<% else %>
  // モーダルを閉じる
  $("#exampleModal").modal("hide");
<% end %>
